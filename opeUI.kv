<ViewGraph>:
    
    Button:

        id: back
        size_hint: None, None
        pos_hint: {'left': 1,'top':1}
        size: 150, 50
        text:"Back"
        on_press:root.stop()
        on_release:root.manager.current="currentdata"
          
    AnchorLayout:
        pos_hint: {'left': 1,'top':0.8}
        anchor_x:'left'
        anchor_y:'top'

        BoxLayout:
            orientation: "vertical"
            size_hint: [0.3,0.25]
             
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "Temperature\nZone 1"
                    bold: True
                    background_color: root.BC[0]
                    on_release:root.T1()
                Button:
                    text:  "Temperature\nZone 2"
                    background_color: root.BC[1]
                    bold: True
                    on_release:root.T2()


            BoxLayout:
                orientation: "horizontal"
               
                Button:
                    text:  "Temperature\nZone 3"
                    background_color: root.BC[2]
                    bold: True
                    on_release:root.T3()

                Button:
                    text:  "Temperature\nZone 4"
                    background_color: root.BC[3]
                    bold: True
                    on_release:root.T4()
    AnchorLayout:
        pos_hint: {'left':1,'top':0.8}
        anchor_x:'left'
        anchor_y:'center'
   
        BoxLayout:
            size_hint: [0.3, 0.25]
            orientation: "vertical"
            Button:
                text: "Pressure"
                bold: True
                background_color: root.BC[4]
                on_press: root.P1()
            Button:
                text: "Screw Speed"
                bold: True
                background_color: root.BC[5]
                on_press: root.S1()
            Button:
                text: "Feed Rate"
                bold: True
                background_color: root.BC[6]
                on_press: root.F1()

    AnchorLayout:
        pos_hint: {'right':1,'top':1}
        anchor_x:'right'
        anchor_y:'center'
        Graph:
            id: graph
            size_hint:[0.65,0.85]
            xlabel: "Time/s"
            ylabel: ""
            xmin: 0
            xmax: 300
            x_ticks_major:60
            x_grid_label: True
            ymin: 0
            ymax: 1000
            y_grid_label:True
            y_ticks_major:100

             
  
